<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.winter.app.users.UserDAO">
		
		
		<insert id="register" parameterType="UserDTO">
			INSERT INTO users (username, password, name, email, phone, birth)
			values(#{username}, #{password}, #{name}, #{email}, #{phone}, #{birth})
		</insert>
		
		<insert id="userFileAdd" parameterType="UserFileDTO">
			INSERT INTO profile (file_name, file_origin, username)
			values(#{fileName}, #{fileOrigin}, #{username})
		</insert>
    	
    	<select id="detail" resultMap="detailResult" parameterType="UserDTO">
    		SELECT *
			FROM users U
				 LEFT JOIN
			     profile PF
			     USING(username)
			WHERE U.username=#{username}
    	</select>
    	
    	<resultMap type="UserDTO" id="detailResult">
    		<id column="username" property="username"/>
    		<result column="password" property="password"/>
    		<result column="name" property="name"/>
    		<result column="email" property="email"/>
    		<result column="phone" property="phone"/>
    		<result column="birth" property="birth"/>
    		<association property="userFileDTO" javaType="UserFileDTO">
    			<id column="file_num" property="fileNum" />
    			<result column="file_name" property="fileName"/>
    			<result column="file_origin" property="fileOrigin"/>
    		</association>
    	</resultMap>

    	<update id="update" parameterType="com.winter.app.users.UserDTO">
		  UPDATE users
		  <set>
		    <if test="name != null and name != ''">
		      name = #{name},
		    </if>
		
		    <if test="email != null and email != ''">
		      email = #{email},
		    </if>
		
		    <if test="phone != null and phone != ''">
		      phone = #{phone},
		    </if>
		
		    <if test="birth != null">
		      birth = #{birth},
		    </if>
		  </set>
		  WHERE username = #{username}
		</update>


    
    </mapper>